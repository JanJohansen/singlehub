{
  "name": "singlehub",
  "version": "0.0.0",
  "author": "derwish-pro <derwish.pro@gmail.com>",
  "private": false,
  "scripts": {
    "start": "node dist/app.js",
    "build": "npm run build-ts && npm run copy-static-assets && npm run build-webpack",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-webpack\" \"nodemon dist/app.js\"",
    "dev": "cross-env NODE_ENV=development node dist/app.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-webpack": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "watch-webpack": "cross-env NODE_ENV=development webpack --progress --hide-modules --watch",
    "serv-webpack": "cross-env NODE_ENV=development webpack-dev-server --open --inline --hot",
    "copy-static-assets": "node bin/copyStaticAssets.js",
    "reset": "node bin/resetConfig.js",
    "bower": "bower",
    "postinstall": "bower install --allow-root && npm run build",
    "check-updates": "ncu -u && ncu -m bower -u"
  },
  "dependencies": {
    "body-parser": "^1.16.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.14.1",
    "express-validator": "^3.1.2",
    "jade": "^1.11.0",
    "lodash": "^4.17.4",
    "logplease": "^1.2.14",
    "miio": "^0.13.0",
    "morgan": "^1.8.1",
    "mqtt": "^2.4.0",
    "nedb": "^1.8.0",
    "pug": "^2.0.0-rc.4",
    "request": "^2.81.0",
    "serialport": "^5.0.0",
    "serve-favicon": "^2.3.2",
    "socket.io": "^1.7.2",
    "source-map-support": "^0.4.11",
    "split": "^1.0.0",
    "stylus": "^0.54.5",
    "vue": "^2.4.4",
    "vue-router": "^3.0.1",
    "vue-socket.io": "^2.1.1-a",
    "vuetify": "^0.16.9"
  },
  "devDependencies": {
    "@types/body-parser": "^0.0.34",
    "@types/cookie-parser": "^1.3.30",
    "@types/express": "^4.0.35",
    "@types/express-validator": "^2.20.33",
    "@types/handlebars": "^4.0.31",
    "@types/jquery": "^2.0.39",
    "@types/jquery.noty": "^2.0.28",
    "@types/lodash": "^4.14.52",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.7.32",
    "@types/mqtt": "0.0.33",
    "@types/nedb": "^0.0.31",
    "@types/node": "^7.0.0",
    "@types/request": "^2.0.1",
    "@types/serve-favicon": "^2.2.28",
    "@types/shelljs": "^0.7.2",
    "@types/socket.io": "^1.4.27",
    "@types/socket.io-client": "^1.4.29",
    "@types/vis": "^4.17.3",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-2": "^6.24.1",
    "bower": "^1.8.0",
    "concurrently": "^3.5.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.4",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.8",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "ts-loader": "^3.1.1",
    "typescript": "^2.4.1",
    "vue-loader": "^13.0.5",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.20.0"
  }
}
