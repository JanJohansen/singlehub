extends ../../../layout

block styles
    link(href='/libs/vis/dist/vis.min.css', rel='stylesheet')


block content
    .ui.container
        a.ui.button.right.floated(href="/dashboard/c/#{node.container.id}/n/#{node.id}") Show Chart
        h2.chartName #{node.title}
        p
            a(href="/dashboard/c/#{node.container.id}") Dashboard
        .ui.divider
        .ui.raised.segments
            .ui.secondary.clearing.segment
                b.chartName #{node.title}
                button#clear-button.ui.right.floated.small.button Clear
            |
            .ui.attached.segment
                | @if (!Model.Any())
                | {
                | @:There are no history. Log shows realtime data only. Check node
                a(href="/Node/Settings/@ViewBag.uiNodeId") settings
                |
                br
                |             }
                |
                table.ui.striped.table
                    thead
                        tr
                            th(scope="col")
                                | Date
                            |
                            th(scope="col")
                                | State
                    |
                    tbody#history-table
                        | @foreach (SensorData item in Model)
                        | {
                        tr
                            td @item.dateTime
                            |
                            td @item.state
                        |                 }
                    |                 @*todo table pagination*@
                    |                 @*
                    tfoot
                        tr
                            th(colspan="3")
                                .ui.pagination.menu
                                    a.icon.item
                                        i.left.chevron.icon
                                    |
                                    a.item 1
                                    |
                                    a.item 2
                                    |
                                    a.item 3
                                    |
                                    a.item 4
                                    |
                                    a.icon.item
                                        i.right.chevron.icon
                    | *@
